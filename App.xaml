<Application x:Class="_3DExample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary>
                    <MaterialGroup x:Key="MaterialBase">
                        <DiffuseMaterial Color="#FFDF792E" AmbientColor="#FFDF792E" Brush="White" />
                        <SpecularMaterial Color="White" Brush="White" SpecularPower="200" />
                    </MaterialGroup>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
